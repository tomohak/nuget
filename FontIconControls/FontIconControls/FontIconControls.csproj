    -->
    <AssemblyName>Plugin.FontIconControls</AssemblyName>
    <RootNamespace>Plugin.FontIconControls</RootNamespace>
    <PackageId>Plugin.FontIconControls</PackageId>
    
    <Product>$(AssemblyName) ($(TargetFramework))</Product>

    <!-- 10.0.16299 -->
