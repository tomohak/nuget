    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Plugin.FontIconControls"
    xmlns:converterst="using:Plugin.FontIconControls.UWP.FontIconTabbedPage.Converters"
    xmlns:converters="using:Plugin.FontIconControls.UWP.FontIconToolbar.Converters">
    
